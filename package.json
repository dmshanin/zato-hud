{
  "name": "zato",
  "version": "1.0.0",
  "description": "zato static",
  "main": "src/index.njk",
  "scripts": {
    "start": "parcel src/index.njk --open",
    "dev": "cross-env NODE_ENV=development parcel src/index.njk --open",
    "prebuild": "cross-env NODE_ENV=production rimraf dist/* && npm run lint",
    "build": "cross-env NODE_ENV=production parcel build src/index.njk --no-cache --public-url ./",
    "preserve": "npm run build",
    "serve": "npx serve dist",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint src/**/*.js --fix",
    "lint:css": "stylelint './src/**/*.+(css|scss)'",
    "prettier": "prettier \"src/**/*.+(js|html|css|scss|json|md|yml|yaml|md)\"",
    "format": "npm run prettier -- --write",
    "validate": "npm run lint && npm run prettier -- --list-different",
    "test": "test -e dist/index.html && exit 0 || exit 1",
    "gh-pages": "gh-pages -d dist"
  },
  "license": "MIT",
  "devDependencies": {
    "animate.css": "^3.7.2",
    "autoprefixer": "^9.7.1",
    "cross-env": "^6.0.3",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.6.0",
    "eslint-plugin-prettier": "^3.1.1",
    "gh-pages": "^2.1.1",
    "husky": "^3.1.0",
    "lint-staged": "^9.4.3",
    "modern-normalize": "^0.5.0",
    "nunjucks": "^3.2.0",
    "parcel-bundler": "^1.12.4",
    "parcel-plugin-imagemin": "^3.0.0",
    "parcel-plugin-nunjucks": "^2.2.0",
    "parcel-plugin-static-files-copy": "^2.2.1",
    "prettier": "1.19.1",
    "rimraf": "^3.0.0",
    "sass": "^1.23.6",
    "stylelint": "^12.0.0",
    "stylelint-config-recommended-scss": "^4.0.0",
    "stylelint-scss": "^3.12.1"
  }
}
