{% extends "html/templates/simple.njk" %}

{% block documentTitle %}Главная{% endblock %}

{% block content %}
  {% import "html/macros/macro-button-link.njk" as macroButtonLink %}
  {% import "html/macros/macro-volume-swiper.njk" as macroVolumeSwiper %}

  <div class="hud-main">
    <div class="hud-main__bg">
      <div class="hud-main__bg__video" style="background: #0078AB"></div>
      <div class="hud-main__bg__decor-top"></div>
      <div class="hud-main__bg__decor-bottom"></div>
    </div>

    <div class="hud-main__header">
      <div class="hud-main__header__decor__container">
        <div class="hud-main__header__decor__row-1 hud-main__header__decor__row-center">
          <div class="hud-main__header__decor__item">
            {% include "html/icons/top-lines.svg" %}
          </div>
        </div>
        <div class="hud-main__header__decor__row-2 hud-main__header__decor__row-space-between">
          <div class="hud-main__header__decor__item">
            {% include "html/icons/side-lines.svg" %}
          </div>
          <div class="hud-main__header__decor__item hud-main__header__decor__item-reverse">
            {% include "html/icons/side-lines.svg" %}
          </div>
        </div>
      </div>
    </div>

    <div class="hud-main__sidebar hud-main__sidebar-left">
      <div class="nav__toggler">
        {{ macroButtonLink.buttonLink(
          '#',
          'nav',
          'html/icons/icon-th.svg',
          'ОТКРЫТЬ МЕНЮ',
          'pointer',
          [
            'html/icons/circle-decor-1.svg',
            'html/icons/circle-decor-2.svg',
            'html/icons/circle-decor-3.svg'
          ],
          'html/icons/radial-glow.svg',
          'html/icons/pointer-line.svg'
        ) }}
      </div>
    </div>

    <div class="hud-main__sidebar hud-main__sidebar-right">
      <div class="hud-main__sidebar-right__decor hud-main__sidebar-right__decor-2">
        {% include "html/icons/logo.svg" %}
      </div>

      <div class="hud-main__sidebar-right__decor hud-main__sidebar-right__decor-5">
        {% include "html/icons/body-decor-3.svg" %}
      </div>

      <div class="hud-main__sidebar-right__decor hud-main__sidebar-right__decor-6">
        {% include "html/icons/body-decor-6.svg" %}
      </div>
    </div>

    {# start body #}
    {{ macroVolumeSwiper.volumeSwiper(47) }}

    <div class="nav__content">
      <div class="nav__content__wrapper">
        {{ macroButtonLink.buttonLink(
          '#',
          'nav-item nav-item-1',
          false,
          'История',
          'center',
          [
            'html/icons/circle-decor-4.svg',
            'html/icons/circle-decor-5.svg'
          ],
          'html/icons/radial-glow.svg'
        ) }}

        {{ macroButtonLink.buttonLink(
          '#',
          'nav-item nav-item-2',
          false,
          'Наше время',
          'center',
          [
            'html/icons/circle-decor-4.svg',
            'html/icons/circle-decor-5.svg'
          ],
          'html/icons/radial-glow.svg'
        ) }}

        {{ macroButtonLink.buttonLink(
          '#',
          'nav-item nav-item-3',
          false,
          'Великие Луки',
          'center',
          [
            'html/icons/circle-decor-4.svg',
            'html/icons/circle-decor-5.svg'
          ],
          'html/icons/radial-glow.svg'
        ) }}

        <div class="nav__content__overlay"></div>
      </div>

      <div class="nav__content__overlay"></div>
    </div>

    {{ macroButtonLink.buttonLink(
      '#',
      'close hud-main__close',
      'html/icons/icon-close.svg',
      'Закрыть',
      'pointer',
      [],
      'html/icons/radial-glow.svg',
      false
    ) }}
    {# end body #}

    <div class="hud-main__footer">
      <div class="hud-main__footer__decor__container">
        <div class="hud-main__footer__decor__row-1 hud-main__footer__decor__row-center">
          <div class="hud-main__footer__decor__item">
            {% include "html/icons/top-lines.svg" %}
          </div>
        </div>
        <div class="hud-main__footer__decor__row-2 hud-main__footer__decor__row-space-between">
          <div class="hud-main__footer__decor__item">
            {% include "html/icons/side-lines.svg" %}
          </div>
          <div class="hud-main__footer__decor__item hud-main__footer__decor__item-reverse">
            {% include "html/icons/side-lines.svg" %}
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
